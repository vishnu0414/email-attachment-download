# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Database Configuration
# Choose database type: sqlite, mysql, postgresql, mssql
DB_TYPE=sqlite

# MySQL Configuration (if DB_TYPE=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gmail_downloader
DB_USER=root
DB_PASSWORD=your-password

# PostgreSQL Configuration (if DB_TYPE=postgresql)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=gmail_downloader
# DB_USER=postgres
# DB_PASSWORD=your-password

# SQL Server Configuration (if DB_TYPE=mssql)
# DB_HOST=localhost
# DB_PORT=1433
# DB_NAME=gmail_downloader
# DB_USER=sa
# DB_PASSWORD=your-password

# File Upload Settings
ATTACHMENT_FOLDER=static/attachments
MAX_ATTACHMENT_SIZE_MB=25

# Gmail API Settings
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.pickle

# IMAP Settings (fallback)
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# Logging
LOG_TO_STDOUT=False
